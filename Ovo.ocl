package topUpGame

context Ovo::Ovo(saldo : integer)
    post : self.saldo = saldo

context Ovo::getNamaDompet() : String
    post: result = "Ovo"

context Ovo::getSaldo() : Integer
    post : self.saldo

context Ovo::bayar(tagihan: Integer)
    init : false
    inv : self.saldo >= 0
    pre : self.getSaldo() >= tagihan
    post : self@pre.getSaldo() - self.getSaldo = tagihan
         and result = true

endpackage